---
import { ThemeProvider } from "@/components/theme-provider";
import "../styles/global.css";
import { Toaster } from "@/components/ui/toaster";
import Navbar from "@/components/Navbar";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Mi Refugio Olmue - Cabañas en Olmué para disfrutar de la naturaleza y descansar. Escapadas de fin de semana perfectas para parejas y familias."
    />
    <meta
      name="keywords"
      content="cabañas olmue, alojamiento olmue, refugio montaña, escapada fin de semana, cabañas chile, descanso naturaleza, cabaña olmue, alojamiento valparaiso"
    />
    <title>Mi Refugio Olmue | Cabañas en la naturaleza</title>
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mirefugioolmue.cl/" />
    <meta
      property="og:title"
      content="Mi Refugio Olmue | Cabañas en la naturaleza"
    />
    <meta
      property="og:description"
      content="Disfruta de la tranquilidad en nuestras cabañas completamente equipadas. Escapadas de fin de semana perfectas para parejas y familias."
    />
    <meta property="og:image" content="/cabin-exterior.jpg" />
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://mirefugioolmue.cl/" />
    <meta
      property="twitter:title"
      content="Mi Refugio Olmue | Cabañas en la naturaleza"
    />
    <meta
      property="twitter:description"
      content="Disfruta de la tranquilidad en nuestras cabañas completamente equipadas. Escapadas de fin de semana perfectas para parejas y familias."
    />
    <meta property="twitter:image" content="/cabin-exterior.jpg" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      href="https://fonts.googleapis.com"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen bg-amber-50">
    <ThemeProvider defaultTheme="light" client:load defaultTheme="light">
      <Navbar client:load />
      <slot />
      <Toaster client:load />
    </ThemeProvider>
  </body>
</html>
